{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "noImplicitAny": false,
        "baseUrl": "./src",
        "paths": {
            "@cache/*": ["cache/*"],
            "@libraries/*": ["libraries/*"],
            "@components/*": ["components/*"],
            "@datatypes/*": ["types/*"],
            "@config": ["config.ts"],
            "@nft/*": ["nft/*"],
            "@nftcomponents/*": ["components/nft/nft-components/*"],
            "@api": ["api/*"],
            "@nftapi/*": ["components/nft/nft-api/*"],
            "@artifacts/*": ["artifacts/*"]
        }
    },
    "include": ["**/*.tsx", "**/*.ts"],
    "exclude": ["node_modules", "build", "src/test", "src/scripts"]
}
